<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardUseCompatPadding="true"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="5dp"
    app:ignore="NamespaceTypo">


    <LinearLayout android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:id="@+id/itemImage"
            android:layout_width="150dp"
            android:layout_height="120.0dp"
            android:layout_margin="5dp"
            fresco:placeholderImage="@color/colorAccent" />
        <LinearLayout android:id="@+id/layout_item_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1.8">
                <TextView
                    android:id="@+id/tvTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item Name "
                    android:textSize="15dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/descr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Item descriptions"
                    android:textSize="10dp"/>
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rs. 8,999"
                    android:textSize="12dp"
                    android:textColor="#4CAF50"/>
            </LinearLayout>

        </LinearLayout>





        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dip"
            android:layout_height="0dip"
         />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/itemImage1"
            android:layout_width="0dip"
            android:layout_height="0dip"
            android:scaleType="fitXY"
            android:src="@drawable/globe"
            />

            <TextView
                android:id="@+id/area"
                android:layout_width="0dip"
                android:layout_height="0dip"
                />
            <TextView
                android:id="@+id/tvTitle1"
                android:layout_width="0dip"
                android:layout_height="0dip"
                />
            <TextView
                android:id="@+id/image"
                android:layout_width="0dip"
                android:layout_height="0dip"
                />


            <TextView
                android:id="@+id/taddress"
                android:layout_width="0dip"
                android:layout_height="0dip"
                />
            <TextView
                android:id="@+id/mapaddress"
                android:layout_width="0dip"
                android:layout_height="0dip"
                />
            <TextView
                android:id="@+id/t_id"
                android:layout_width="0dip"
                android:layout_height="0dip"
                />
            <TextView
                android:id="@+id/tname"
                android:layout_width="0dip"
                android:layout_height="0dip"
                />







    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>